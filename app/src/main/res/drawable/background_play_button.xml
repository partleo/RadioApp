<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list >
            <item
                android:left="2dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="2dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorShadow"/>
                </shape>
            </item>
            <item
                android:left="3dp"
                android:top="1dp"
                android:right="3dp"
                android:bottom="3dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorShadow"/>
                </shape>
            </item>
            <item
                android:left="4dp"
                android:top="2dp"
                android:right="4dp"
                android:bottom="4dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorShadow"/>
                </shape>
            </item>
            <item
                android:left="5dp"
                android:top="3dp"
                android:right="5dp"
                android:bottom="5dp">
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="@color/colorStroke" />
                    <gradient android:angle="135"
                        android:startColor="@color/colorSilverStart"
                        android:centerColor="@color/colorSilverCenter"
                        android:endColor="@color/colorSilverEnd" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list >
            <item
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="0dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorShadow"/>
                </shape>
            </item>
            <item
                android:left="3dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="1dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorShadow"/>
                </shape>
            </item>
            <item
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="2dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorShadow"/>
                </shape>
            </item>
            <item
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="3dp">
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="@color/colorStroke" />
                    <gradient android:angle="315"
                        android:startColor="@color/colorSilverCenter"
                        android:centerColor="@color/colorSilverEnd"
                        android:endColor="@color/colorSilverCenter" />
                </shape>
            </item>
        </layer-list>
    </item>



</selector>